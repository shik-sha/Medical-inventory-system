        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <div  class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Dashboard</h1>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-header">
                        <h2>Stats</h2>
                    </div>
                    <div class="tables-body">
                        <table class="table table-dark">
                            <tr>
                                <td>Total Stock</td>
                                <td>Total Brands</td>
                            </tr>
                            <tr>
                                {{#n1}}<td>{{sum}}</td>{{/n1}}
                                {{#n2}}<td>{{count}}</td>{{/n2}}
                            </tr>
                        </table>
                    </div>   
                </div>
            </div>
            <br>

            <div class="row">
                <div class="col-md-12">
                    <div class="table-header">
                        <h2>Stats</h2>
                    </div>
                    <div class="table-body">
                        
                        
                        <a href="/meds" class="btn btn-dark">Medicine List</a><br><br>
                        <a href="/add" class="btn btn-dark">Add Medicine</a><br><br>
                        <a href="/meds" class="btn btn-dark">Edit Medicines</a><br><br>
                        <a href="/meds" class="btn btn-dark">Delete Medicine</a>
                    </div>
                    
                </div>
            </div>
        </div>


