<!DOCTYPE html>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    </head>
    <body>
        
        <div class='container'>
            <div class='col-md-12'>
                <h1>List of available medicines</h1>
            </div>
        </div>
        <div class='container'>
            <div class='col-md-12'>
                <table class="table table-striped table-dark">
                    <thead class='thead-light'>
                        <tr>
                            <th scope='col'>M.id.</th>
                            <th scope='col'>Medicine</th>
                            <th scope='col'>Count</th>
                            <th scope='col'>Brand</th>
                            <th scope='col'>Delete</th>
                            <th scope='col'>Edit</th>
                        </tr>
                    </thead>
                    {{#rows}}
                        <tr>
                            <td>{{mid}}</td>
                            <td>{{name}}</td>
                            <td>{{count}}</td>
                            <td>{{brand}}</td>
                            <td>
                                <form action='/meds/delete/{{mid}}' method='post'>
                                    <button class='btn btn-danger' type='submit'>Delete</button>
                                </form>    
                            </td>
                            <td>
                                <a class='btn btn-success' href="meds/edit/{{mid}}">Edit</a>  
                            </td>

                        </tr>
                    {{/rows}}
                </table>
            </div>
        </div>
        <div class='container'>
            <div class='col-md-12'>
                <h2>Want to add new medicine?</h2>
                <a href="/add/{{mid}}" class="btn btn-default">Click here</a>
            </div>
        </div>
    </body>
</html>